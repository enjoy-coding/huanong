<!DOCTYPE html>
<html lang="zh" xmlns:th="http://www.thymeleaf.org" xmlns:shiro="http://www.pollix.at/thymeleaf/shiro">
<head>
    <th:block th:include="include :: header('社区服务列表')" />
</head>
<body class="gray-bg">
<div class="container-div">
    <div class="row">
        <div class="col-sm-12 search-collapse">
            <form id="formId">
                <div class="select-list">
                    <ul>
                        <li>
                            <p>社区名称：</p>
                            <input type="text" name="serviceName"/>
                        </li>
                        <li>
                            <p>服务类型：</p>
                            <select name="serviceType"  th:with="type=${@dict.getType('sc_fwzc_type')}">
                                <option value="">所有</option>
                                <option th:each="dict : ${type}" th:text="${dict.dictLabel}" th:value="${dict.dictValue}"></option>
                            </select>
                        </li>
                        <li>
                            <a class="btn btn-primary btn-rounded btn-sm" onclick="$.table.search()"><i class="fa fa-search"></i> 搜索</a>
                            <a class="btn btn-warning btn-rounded btn-sm" onclick="$.form.reset()"><i class="fa fa-refresh"></i> 重置</a>
                        </li>
                    </ul>
                </div>
            </form>
        </div>

        <div class="btn-group-sm" id="toolbar" role="group">
            <a class="btn btn-success" onclick="$.operate.addFull()" shiro:hasPermission="sc:service:add">
                <i class="fa fa-plus"></i> 添加
            </a>
            <a class="btn btn-primary single disabled" onclick="$.operate.editFull()" shiro:hasPermission="sc:service:edit">
                <i class="fa fa-edit"></i> 修改
            </a>
            <a class="btn btn-danger multiple disabled" onclick="$.operate.removeAll()" shiro:hasPermission="sc:service:remove">
                <i class="fa fa-remove"></i> 删除
            </a>
            <a class="btn btn-warning" onclick="$.table.exportExcel()" shiro:hasPermission="sc:service:export">
                <i class="fa fa-download"></i> 导出
            </a>
        </div>
        <div class="col-sm-12 select-table table-striped">
            <table id="bootstrap-table" data-mobile-responsive="true"></table>
        </div>
    </div>
</div>
<th:block th:include="include :: footer" />
<script th:inline="javascript">
    var editFlag = [[${@permission.hasPermi('sc:service:edit')}]];
    var removeFlag = [[${@permission.hasPermi('sc:service:remove')}]];
    var types = [[${@dict.getType('sc_fwzc_type')}]];
    var ctypes = [[${@dict.getType('sc_dq_type')}]];
    var prefix = ctx + "sc/service";
  
    $(function() {
        var options = {
            url: prefix + "/list",
            createUrl: prefix + "/add",
            updateUrl: prefix + "/edit/{id}",
            removeUrl: prefix + "/remove",
            exportUrl: prefix + "/export",
            detailUrl:prefix+"/detail/{id}",
            modalName: "社区服务",
            columns: [{
                checkbox: true
            },
                {
                    field : 'serviceId',
                    title : '社区编号',
                    visible: false
                },
                {
                    field : 'serviceName',
                    title : '社区名称',
                },
                {
                    field : 'serviceType',
                    title : '服务类型',
                    align: 'center',
                        formatter: function(value, row, index) {
                            return $.table.selectDictLabel(types, value);
                        }
                },
                {
                    field : 'serviceCType',
                    title : '服务子类型'
                    
                },
                {
                    field : 'serviceContent',
                    title : '服务内容',
                    align: 'center',
                    formatter: function(value, row, index) {
                        return value.length>50?"":value
                    }
                },
                {
                    field : 'updateTime',
                    title : '提交时间'
                },
                {
                    title: '操作',
                    align: 'center',
                    formatter: function(value, row, index) {
                        var actions = [];
                        actions.push('<a class="btn btn-success btn-xs ' + editFlag + '" href="javascript:void(0)" onclick="$.operate.editFull(\'' + row.serviceId + '\')"><i class="fa fa-edit"></i>编辑</a> ');
                        actions.push('<a class="btn btn-danger btn-xs ' + removeFlag + '" href="javascript:void(0)" onclick="$.operate.remove(\'' + row.serviceId + '\')"><i class="fa fa-remove"></i>删除</a>');
                        return actions.join('');
                    }
                }]
        };
        $.table.init(options);
    });
</script>
</body>
</html>