body,html{
	width:100%;
	height:100%;
}
body{
	font-family:microsoft yahei; 
	margin:0px; padding:0px;
	background:#222  url(../img/bg-gride.png);
	background-size: 100% 100%;
	overflow:hidden;
}
canvas {
	display:block;
}
.txtL{
	text-align: left;
}
.waves {
	position:absolute;
	left:0;
	top:0;
	right:0;
	bottom:0;
}
.loginForm{
	text-align: center;
	position:relative;
	top:0;
	left:0;
	right:0;
	bottom:0;
	width:100%;
	height:100%;
	background: url(../img/loginBg.png) no-repeat center; 
	background-size:cover;
}
.loginForm .logo{
	margin:0 auto;
	width:42%;
	margin-top:5.2vh;
	display:inline-block;
}
.loginForm .from {
	box-sizing: border-box;
	-moz-box-sizing: border-box;
	-webkit-box-sizing: border-box;
	width:34%;
	height:38%;
	/*background-color:#333;*/
	position:absolute;
	left:50%;
	margin-left:-17%;
	top:32%;
	padding:7.8vh 5.7vw 0 5.7vw;
	/*margin-top:-8%;*/
}
.loginForm .from .display-block{
	color: #fff;
	position:relative;
	padding-left:85px;
	margin-bottom:4.2vh;
	vertical-align: middle;
}
.loginForm .from .display-block label{
	font-size:16px;
	position:absolute;
	left:0;
	top:0;
	line-height:4.2vh;
	width:80px;
	text-align: right;
}
.loginForm .from .display-block .input{
	color: #fff!important;
	font-size: 15px;
	display:block;
	width:95%;
	line-height:4.2vh;
	padding:0 10px;
	box-sizing: border-box;
	-moz-box-sizing: border-box;
	-webkit-box-sizing: border-box;
	border:none;
	background-color:#0f8786;
	color: #fff;
	border-radius:4px;
	vertical-align: middle;
	-webkit-text-fill-color: #fff;
	-webkit-box-shadow: 0 0 0px 1000px #0f8786 inset;
	-moz-box-shadow: 0 0 0px 1000px #0f8786 inset;
	-ms-box-shadow: 0 0 0px 1000px #0f8786 inset;
	box-shadow: 0 0 0 1000px #0f8786 inset;
	outline: none;
}
.btn{
	font-family: "微软雅黑";
	font-size:16px;
	display:block;
	width:95%;
	line-height:4.2vh;
	border-radius:4px;
	background-color:#df7925;
	color:#fff;
	border:none;
	outline: none;
}
.footer{
	position:absolute;
	left:0;
	right:0;
	bottom:4%;
	text-align: center;
	color:#2a8194;
}
@media(max-width:1200px){
	.loginForm .from{
		width:40%;
		margin-left:-20%;
	}
}
@media(max-width:1000px){
	.loginForm .from{
		width:45%;
		margin-left:-22.5%;
	}
}
@media(max-width:800px){
	.loginForm .from{
		width:55%;
		margin-left:-27.5%;
	}
}
@media(max-width:600px){
	.loginForm .from{
		width:65%;
		margin-left:-32.5%;
	}
}

/*提示弹框*/
.layerTxt{
	display:none;
	font-size:16px;
	padding:20px 0;	
	width:300px;
}
.layerTxt h5{
	font-size:18px;
	margin-bottom:20px;
}
.layerTxt .icon{
	display:inline-block;
	width:40px;
	height:40px;
	background: url(../img/tipIco.png) no-repeat center;
	background-size: 100%;
}
body .msgLayer{
	background-color:rgba(13,108,115,.85);
	color:#fff;
	text-align: center;
	border:1px solid #06ebeb;
	border-radius:8px;
	box-shadow:inset 0 1px 5px rgba(50,150,155,.8);
	box-shadow: 0 0 10px  rgba(5,70,74,.8);
}
body .msgLayer .layui-layer-btn{
	text-align: center;
}
body .msgLayer .layui-layer-btn .layui-layer-btn0{
	min-width:80px ;
	margin-bottom:10px;
	background-color:#229091;
	border:1px solid #06ebeb;
	box-shadow:inset 0 5px 10px rgba(38,121,125,.6);
}

/*验证码*/
.loginForm .from{
	padding: 3.5vh 5.7vw 0 5.7vw;
}
.loginForm .from .display-block{
	margin-bottom:3vh;
}
.loginForm .from .code {
	overflow: hidden;
}
.loginForm .from .code .input{
	float:left;
	width:50%;
}
.loginForm .from .code img{
	float:right;
	margin-right:5%;
	width:40%;
	height:4.2vh;
	background:#d9d9d9;
}

.forgetPassword{
	overflow: hidden;
	font-size:12px;
	color:#fff;
	width:95%;
}
.forgetPassword a{
	font-size:12px;
	color:#fff;
	float:right;
	margin-right:0.5%;
}
.forgetPassword a:hover{
	text-decoration: underline;
}