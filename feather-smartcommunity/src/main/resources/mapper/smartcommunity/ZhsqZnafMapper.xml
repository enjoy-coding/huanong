         ORDER BY JCSJ desc
    </select>

    <select id="getSxtList" resultType="map">
        SELECT * FROM [dbo].[ZHSQ_SXT] n

        <where>
             wzlx= #{wzlx}
            <choose>
                <when test="xqid!=null and xqid!=''">and n.XQID=#{xqid}</when>
                <otherwise>and n.sqid=#{sqid}</otherwise>
